extends layout

block content
  if posts
    each post, i in posts
      h1
        a(href="/posts/show/#{post.id}")=post.title
      p.meta Posted in #{post.category} by #{post.author} on #{ moment(post.date).format("MM-DD-YYYY") }
      !=post.body
      a.more(href="/posts/show/#{post.id}") Read more
  else
    p.noposts There are no posts to display
